<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BuBook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#8EE02E</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >#8EE02E</item>
        <!-- Customize your theme here. -->
        <item name="bgColor">#8EE02E</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="image_first">@drawable/back</item>
        <item name="image_second">@drawable/back_two</item>
        <item name="textColor">#000000</item>
        <item name="itemBgColor">#08C1A9A9</item>
        <item name="infoScreenBg">#ffffff</item>
        <item name="dialogColor">#FBFEE3</item>
        <item name="themeIcon">@drawable/ic_baseline_wb_sunny_24</item>
        <item name="android:actionMenuTextColor">@android:color/holo_green_light</item>

        <item name="textAppearancePopupMenuHeader">@style/BasePopupMenu</item>

    </style>


    <style name="BasePopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">#AE141313</item>
        <item name="android:textSize">16sp</item>
    </style>







</resources>